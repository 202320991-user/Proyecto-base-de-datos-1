@page
@model NorthwindWeb.Pages.Reports.DetallesDePedidoModel
@{
    ViewData["Title"] = $"Detalles del Pedido #{Model.OrderID}";
}

<h1>Detalles del Pedido: #@Model.OrderID</h1>
<hr />

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @Model.ErrorMessage
    </div>
}
else if (Model.Detalles.Any())
{
    <h2>Líneas de Producto (Usando Vista SQL)</h2>
    <table class="table table-striped table-bordered">
        <thead class="table-info">
            <tr>
                <th>ID Producto</th>
                <th>Producto</th>
                <th>Precio Unitario</th>
                <th>Cantidad</th>
                <th>Descuento (%)</th>
                <th>Total por Línea</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detalle in Model.Detalles)
            {
                <tr>
                    <td>@detalle.ProductID</td>
                    <td>@detalle.ProductName</td>
                    <td>@detalle.UnitPrice.ToString("C2")</td>
                    <td>@detalle.Quantity</td>
                    <td>@((detalle.Discount * 100).ToString("F0"))%</td>
                    <td><strong>@detalle.TotalLinea.ToString("C2")</strong></td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr class="table-dark">
                <td colspan="5" class="text-end"><strong>TOTAL GENERAL DEL PEDIDO:</strong></td>
                <td><strong>@Model.TotalGeneral.ToString("C2")</strong></td>
            </tr>
        </tfoot>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        Por favor, ingrese un ID de Pedido válido o verifique si el pedido contiene productos.
    </div>
}