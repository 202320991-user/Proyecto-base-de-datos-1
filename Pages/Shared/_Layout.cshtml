<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NorthwindWeb</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NorthwindWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="wrapper">

<!-- SIDEBAR -->
<nav id="sidebar">
    <div class="sidebar-header">
        <h3>Menú</h3>
    </div>

    <ul class="list-unstyled components">

        <li><a asp-page="/Index">Inicio</a></li>

        <!-- Clientes -->
        <li><a asp-page="/Customers/Index">Clientes</a></li>
        <li><a asp-page="/Customers/Create">Registrar Cliente</a></li>

        <!-- Órdenes (texto sin link) -->
        <li class="mt-3 fw-bold text-light" style="cursor: default;">Órdenes</li>
        <li><a asp-page="/Orders/CreateOrderSP">Registrar Pedido</a></li>

        <!-- Reportes -->
        <li class="mt-3 fw-bold text-light" style="cursor: default;">Reportes</li>
        <li><a asp-page="/Reports/PedidosPorCliente">Pedidos por Cliente</a></li>
        <!-- Consultas -->
        <li><a asp-page="/Reports/VentasPorEmpleado">Ventas por Empleado</a></li>
        <li><a asp-page="/Reports/PromedioPedidoClienteAnio">Promedio de valor de pedido por cliente por año </a></li>
        <li><a asp-page="/Reports/VentasPorClienteMes">Ventas totales por cliente por mes </a></li>
        <li><a asp-page="/Reports/VentasPorClienteAnio">Ventas totales por cliente por año</a></li>

    </ul>
</nav>
<!-- FIN SIDEBAR -->

        <!-- CONTENIDO -->
        <div id="content">

            <header>
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                    <div class="container-fluid">
                        <a class="navbar-brand" asp-area="" asp-page="/Index">NorthwindWeb</a>

                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Customers/Index">Clientes</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Privacy">Privacy</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </header>

            <div class="container-fluid mt-2">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

            <footer class="text-center text-muted small py-2 border-top">
                © 2025 Northwind Web — Proyecto Base de Datos I
            </footer>
        </div>

    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync(name: "Scripts", required: false)

</body>
</html>
