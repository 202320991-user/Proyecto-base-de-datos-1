@page
@model NorthwindWeb.Pages.Orders.CreateOrderSPModel
@{
    ViewData["Title"] = "Registrar Nuevo Pedido (SP)";
}

<h1>@ViewData["Title"]</h1>
<hr />

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success" role="alert">@Model.SuccessMessage</div>
}
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">@Model.ErrorMessage</div>
}

<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="row">
                <h4 class="mt-3">Datos del Pedido</h4>
                
                <div class="mb-3 col-md-4">
                    <label asp-for="Input.CustomerID" class="form-label"></label>
                    <input asp-for="Input.CustomerID" class="form-control" placeholder="Ej: ALFIK" />
                    <span asp-validation-for="Input.CustomerID" class="text-danger"></span>
                </div>

                <div class="mb-3 col-md-4">
                    <label asp-for="Input.EmployeeID" class="form-label"></label>
                    <select asp-for="Input.EmployeeID" class="form-select">
                        @foreach (var emp in Model.Employees)
                        {
                            <option value="@emp.Id">@emp.Name</option>
                        }
                    </select>
                    <span asp-validation-for="Input.EmployeeID" class="text-danger"></span>
                </div>

                <div class="mb-3 col-md-4">
                    <label asp-for="Input.ShipVia" class="form-label"></label>
                    <select asp-for="Input.ShipVia" class="form-select">
                        @foreach (var shipper in Model.Shippers)
                        {
                            <option value="@shipper.Id">@shipper.Name</option>
                        }
                    </select>
                    <span asp-validation-for="Input.ShipVia" class="text-danger"></span>
                </div>
            </div>

            <h4 class="mt-3">Detalle del Producto (Primer LÃ­nea)</h4>

            <div class="row">
                <div class="mb-3 col-md-4">
                    <label asp-for="Input.ProductID" class="form-label"></label>
                    <input asp-for="Input.ProductID" class="form-control" placeholder="ID Producto (Ej: 11)" />
                    <span asp-validation-for="Input.ProductID" class="text-danger"></span>
                </div>

                <div class="mb-3 col-md-4">
                    <label asp-for="Input.Quantity" class="form-label"></label>
                    <input asp-for="Input.Quantity" class="form-control" type="number" />
                    <span asp-validation-for="Input.Quantity" class="text-danger"></span>
                </div>

                <div class="mb-3 col-md-4">
                    <label asp-for="Input.Discount" class="form-label">Descuento (0.0 a 0.5)</label>
                    <input asp-for="Input.Discount" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Input.Discount" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-lg mt-4">
                Registrar Pedido con SP
            </button>
            <a asp-page="/Customers/Index" class="btn btn-secondary btn-lg mt-4">Cancelar</a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}